{
  "manifest_version": 3,
  "name": "Chat GPT PROMPT NOTES ",
  "version": "1.0",
  "description": "A draggable, resizable, collapsible smart notes box on any site.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": [
      "*://chatgpt.com/*",
      "*://www.chatgpt.com/*",
      "*://chat.openai.com/*",
      "*://chatgpt.com/?model=auto*",
      "*://chat.openai.com/?model=auto*",
      "*://chat.deepseek.com/*"
  ]
,
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}








